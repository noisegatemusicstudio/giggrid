echo "🔍 Running pre-commit checks..."

# Check if there are any staged files
STAGED_FILES=$(git diff --cached --name-only)
if [ -z "$STAGED_FILES" ]; then
  echo "ℹ️  No staged files found, skipping pre-commit checks."
  exit 0
fi

# Run lint-staged for ESLint and formatting
npx lint-staged

# Check if lint-staged passed
if [ $? -ne 0 ]; then
  echo "❌ ESLint checks failed. Please fix the issues and try again."
  exit 1
fi

# Get list of staged TypeScript files only
STAGED_TS_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|tsx)$')

if [ -n "$STAGED_TS_FILES" ]; then
  echo "🔬 Running TypeScript compilation check on staged TypeScript files..."
  
  # Run TypeScript compilation check on project
  npx tsc --noEmit
  if [ $? -ne 0 ]; then
    echo "❌ TypeScript compilation failed"
    echo "💡 Please fix TypeScript errors and try again."
    exit 1
  fi
  
  echo "✅ TypeScript compilation check completed successfully"
else
  echo "ℹ️  No TypeScript files to check"
fi

# Run tests to ensure nothing is broken
echo "🧪 Running tests..."
npm test -- --passWithNoTests --watchAll=false

if [ $? -ne 0 ]; then
  echo "❌ Tests failed. Please fix the issues and try again."
  exit 1
fi

echo "✅ All pre-commit checks passed!"
echo "🚀 Ready to commit!"

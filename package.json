{
  "name": "gig-grid",
  "version": "1.0.0",
  "description": "Screen-driven React Native app built with Expo and automated testing",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "web": "expo start --web",
    "ios": "expo start --ios",
    "android": "expo start --android",
    "build:web": "expo build:web",
    "build:ios": "expo build:ios",
    "build:android": "expo build:android",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "sonar": "sonar-scanner",
    "sonar:analysis": "npm run lint && npm run test:coverage && npm run sonar",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "pre-commit-check": "npm run lint:fix && npm run format && npm run test && npm run sonar",
    "e2e:ios": "npm run submodule:appium && cd submodules/appium-framework && npm run test:ios",
    "e2e:android": "npm run submodule:appium && cd submodules/appium-framework && npm run test:android",
    "e2e:web": "npm run submodule:playwright && cd submodules/playwright-framework && npm run test",
    "submodule:init": "git submodule update --init --recursive",
    "submodule:update": "git submodule update --remote",
    "submodule:appium": "cd submodules/appium-framework && npm install",
    "submodule:playwright": "cd submodules/playwright-framework && npm install",
    "prepare": "husky"
  },
  "dependencies": {
    "@react-navigation/bottom-tabs": "^6.6.1",
    "@react-navigation/native": "^6.1.18",
    "@react-navigation/stack": "^6.4.1",
    "@reduxjs/toolkit": "^2.8.2",
    "expo": "^53.0.20",
    "expo-constants": "~15.4.0",
    "expo-font": "~11.10.0",
    "expo-splash-screen": "^0.30.10",
    "expo-status-bar": "~1.11.0",
    "react": "18.3.1",
    "react-native": "0.73.6",
    "react-native-gesture-handler": "~2.18.0",
    "react-native-reanimated": "~3.15.0",
    "react-native-screens": "~3.34.0",
    "react-native-web": "~0.19.13",
    "react-redux": "^9.2.0",
    "redux-persist": "^6.0.0",
    "@expo/metro-runtime": "~5.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.25.0",
    "@babel/preset-env": "^7.25.0",
    "@react-native-community/eslint-config": "^3.2.0",
    "@testing-library/react-native": "^13.2.2",
    "@types/jest": "^29.5.13",
    "@types/react": "~18.3.11",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^8.57.1",
    "eslint-config-expo": "^9.2.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-native": "^5.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-expo": "~52.0.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "react-native-safe-area-context": "^5.5.2",
    "react-test-renderer": "18.3.1",
    "sonarqube-scanner": "^4.3.0",
    "typescript": "5.5.4"
  },
  "jest": {
    "preset": "jest-expo",
    "testMatch": [
      "**/src/**/*.test.{js,jsx,ts,tsx}"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/submodules/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/tests/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "private": true
}
